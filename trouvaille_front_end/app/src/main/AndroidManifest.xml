<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gwc.com.trouvaille">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/trouvaille_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Layout.UserPreferenceActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Layout.VenueActivity"
            android:parentActivityName=".Layout.MainActivity" />
        <activity android:name=".Layout.MainActivity" />
        <activity
            android:name=".Layout.ResultsActivity"
            android:label="@string/title_activity_results"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".Layout.MainActivity"></activity>
    </application>

</manifest>